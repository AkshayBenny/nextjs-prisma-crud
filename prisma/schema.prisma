// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  pin       Boolean  @default(false)
  createdAt DateTime @default(now())
}


